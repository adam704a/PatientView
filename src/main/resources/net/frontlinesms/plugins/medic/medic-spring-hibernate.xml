<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
							http://www.springframework.org/schema/context   http://www.springframework.org/schema/context/spring-context-2.5.xsd
							http://www.springframework.org/schema/tx		http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
							">

	<!-- turn on annotation support -->
	<context:annotation-config />
	<tx:annotation-driven />
	
	<bean id="CHWDao"
		class="net.frontlinesms.plugins.medic.data.repository.hibernate.HibernateCommunityHealthWorkerDao">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="PatientDao"
		class="net.frontlinesms.plugins.medic.data.repository.hibernate.HibernatePatientDao">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="UserDao"
		class="net.frontlinesms.plugins.medic.data.repository.hibernate.HibernateUserDao">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="MedicFieldDao"
		class="net.frontlinesms.plugins.medic.data.repository.hibernate.HibernateMedicFieldDao">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="MedicFormDao"
		class="net.frontlinesms.plugins.medic.data.repository.hibernate.HibernateMedicFormDao">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="MedicFormFieldDao"
		class="net.frontlinesms.plugins.medic.data.repository.hibernate.HibernateMedicFormFieldDao">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>	 
	<bean id="MedicFieldResponseDao"
		class="net.frontlinesms.plugins.medic.data.repository.hibernate.HibernateMedicFieldResponseDao">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="MedicFormResponseDao"
		class="net.frontlinesms.plugins.medic.data.repository.hibernate.HibernateMedicFormResponseDao">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="MedicMessageResponseDao"
		class="net.frontlinesms.plugins.medic.data.repository.hibernate.HibernateMedicMessageResponseDao">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="ResponseDao"
		class="net.frontlinesms.plugins.medic.data.repository.hibernate.HibernateResponseDao">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="TagDao"
		class="net.frontlinesms.plugins.medic.data.repository.hibernate.HibernateTagDao">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="TagKeywordDao"
		class="net.frontlinesms.plugins.medic.data.repository.hibernate.HibernateTagKeywordDao">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="HistoryEntryDao"
		class="net.frontlinesms.plugins.medic.data.repository.hibernate.HibernateHistoryEntryDao">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
</beans>
